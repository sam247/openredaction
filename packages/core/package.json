{
  "name": "openredaction",
  "version": "1.0.0",
  "description": "Local-first PII detection and redaction library for JavaScript/TypeScript. 571+ patterns, zero dependencies, works everywhere.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "bin": {
    "openredaction": "./dist/index.cli.js",
    "openredaction-test-pattern": "./dist/cli/test-pattern.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench --run",
    "bench:watch": "vitest bench",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "pii",
    "pii-detection",
    "redaction",
    "privacy",
    "data-protection",
    "gdpr",
    "hipaa",
    "ccpa",
    "sensitive-data",
    "anonymization",
    "redact",
    "local-first",
    "zero-dependencies",
    "typescript",
    "llm",
    "agent"
  ],
  "author": "OpenRedaction Contributors",
  "license": "MIT",
  "homepage": "https://github.com/sam247/openredaction#readme",
  "bugs": {
    "url": "https://github.com/sam247/openredaction/issues"
  },
  "peerDependencies": {
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0",
    "tesseract.js": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "pdf-parse": {
      "optional": true
    },
    "mammoth": {
      "optional": true
    },
    "tesseract.js": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.6",
    "@vitest/coverage-v8": "^1.0.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sam247/openredaction.git",
    "directory": "packages/core"
  }
}
